<h1>Listing Sales Call Entries</h1>

<table class='table table-bordered table-hover'>
<thead>
  <tr>
    <th>Date</th>
    <th>Shipper name</th>
    <th>Pic</th>
    <th>Point discussed</th>
    <th>My observation</th>
    <th>Enquiry recieved</th>
    <th>Escalation</th>

  </tr>
</thead>
<% @sales_call_entries.each do |sales_call_entry| %>
  <tr>
    <td><%= sales_call_entry.date.strftime('%d - %b - %Y') %></td>
    <td><%= sales_call_entry.shipper_name %></td>
    <td><%= sales_call_entry.pic %></td>
    <td><%= sales_call_entry.point_discussed %></td>
    <td><%= sales_call_entry.my_observation %></td>
    <td><%= sales_call_entry.enquiry_recieved? ? 'Yes' : 'No' %>
    <% if sales_call_entry.enquiry_recieved? %> 
        <br>
        <%= link_to 'See Enquiry?',sales_call_entry %>
    <% end %>
    </td>
    <td><%= sales_call_entry.escalation? ? 'Yes' : 'No' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Sales call entry', new_sales_call_entry_path, :class => 'btn btn-large btn-info', :style =>'color:white' %>
