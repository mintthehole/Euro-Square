<h3 class="page-title">
JBC Delievry Options
</h3>
<ul class="breadcrumb">
<li><a href="#"> JBC Order Details</a> &nbsp;&nbsp;&nbsp;
<a href="/jbc_mailers"> JBC Mailers</a> &nbsp;&nbsp;&nbsp;
<a href="/delivery_options"> Delivery Options</a>
</li>
</ul>

<div id="search">
<div class='pull-right'>
	<b> <%= link_to 'Add New Option ?', '/new_option' %></b>
</div>
<br/><br/>
<table class="table table-striped table-bordered table-advance table-hover">
    <thead>
      <tr>
        <th>City</th>
        <th>Options</th>
        <th> Edit</th>
      </tr>
    </thead>
    <tbody>
			<% @cities.each do |city| %>
				<% unless city.options.empty? %>
					<tr>
					<td><%= city.name  %></td>
					<td>
						<% city.options.each_with_index do |option,i|%>
							<%= "#{i+1} #{option.name} #{option.address}" %>
							<br/>
						<% end %>
					</td>
					<td><%= link_to "Edit", edit_city_path(city)%> </td>
					</tr>
				<% end %>
			<%end%>
		</tbody>
	</table>	
</div>
