<%= form_for(@customer) do |f| %>
  <% if @customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
      <% @customer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :customer_name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :sales_person %>
    <%= f.text_field :sales_person %>
  </div>
  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>

  <div class="field">
    <%= f.label :pic %>
    <%= f.text_field :contact_person %>
  </div>
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :mobile %>
    <%= f.text_field :phone %>
  </div>
  <div class="actions">
    <% if current_user.sales? %>
      <%= f.hidden_field :approved, :value => false %>
    <% end %>
    <%= f.submit "save", :class => 'btn btn-info'%>
  </div>
<% end %>
