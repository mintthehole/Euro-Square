<h1>Listing customers</h1>
    
<%= link_to 'New Customer', new_customer_path, :class => 'btn btn-medium btn-info', :style =>'color:white'  %>
<br>
<br>

<%= define_grid(@tasks_grid, hide_submit_button: true, hide_reset_button: true) do |g|
  g.column name:  'Name', attribute: 'name', detach_with_id: :name_filter
  g.column name:  'City', attribute: 'city', detach_with_id: :city_filter
  g.column name:  'Address1', attribute: 'address_1', detach_with_id: :address_1_filter
  g.column name:  'Address2', attribute: 'address_2', detach_with_id: :address_2_filter
  g.column name:  'PIC', attribute: 'contact_person', detach_with_id: :contact_person_filter
  g.column name:  'Sales Person', attribute: 'sales_person', detach_with_id: :sales_person_filter
  g.column name:  'Email', attribute: 'email', detach_with_id: :email_filter
  g.column  :in_csv => false do |task|
    link_to('Edit', edit_customer_path(task))
  end
end
%>

<div class="row-fluid">
  <div class="span1">
    Name:
  </div>
  <div class="span3">
    <%= grid_filter @tasks_grid, :name_filter %>
  </div>
  <div class="span1">
    City:
  </div>
  <div class="span3">
    <%= grid_filter @tasks_grid, :city_filter %>
  </div>
  <div class="span1">
    Sales Person:
  </div>
  <div class="span3">
    <%= grid_filter @tasks_grid, :sales_person_filter %>
  </div>
  <div class="span1">
    Email:
  </div>
  <div class="span3">
    <%= grid_filter @tasks_grid, :email_filter %>
  </div>
   <div class="span1">
    Pic:
  </div>
  <div class="span3">
    <%= grid_filter @tasks_grid, :contact_person_filter %>
  </div>
  
</div>
<div class="row-fluid">
  <div class="span12">
    <div class="external-buttons">
  <button class="wg-external-submit-button" data-grid-name="grid">Submit</button>
  <button class="wg-external-reset-button" data-grid-name="grid">Reset</button>
    </div>
    </div>
</div>
    
<div class="row-fluid">
  <div class="span12">
    <%= render_grid(@tasks_grid)  %>
    </div>
    </div>