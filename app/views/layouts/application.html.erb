  <%= stylesheet_link_tag    "bootstrap-responsive.min.css", :media => "all" %>
  <%= stylesheet_link_tag    "style.css", :media => "all" %>
  <%= stylesheet_link_tag    "style-responsive.css", :media => "all" %>
